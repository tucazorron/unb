<div class="container">
  <div class="image-col">
    <div class="hero-container"></div>
  </div>
  <div class="form-col">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name))  do |f| %>
      <h1>Login</h1>
      <div class="input-wrapper">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "input-box" %>
      </div>
      <div class="input-wrapper">
        <%= f.label :senha %><br />
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Senha", class: "input-box" %>
      </div>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= f.submit "Entrar", class: "btn" %>
      <div class="sign-up-info">
        <p>Ainda n√£o possui conta?</p>
        <%= link_to "Registre-se", new_registration_path(resource_name), class: "sign-up-link" %>
      </div>
    <% end %>
  </div>
</div>


