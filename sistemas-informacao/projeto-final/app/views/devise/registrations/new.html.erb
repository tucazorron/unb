<div class="container">
  <div class="image-col">
    <div class="hero-container"></div>
  </div>
  <div class="form-col">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <h1>Cadastro</h1>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="input-wrapper">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "input-box" %>
      </div>

      <div class="input-wrapper">
        <%= f.label :senha %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder:"Senha", class: "input-box" %>
        <% if @minimum_password_length %>
        <em>(mínimo <%= @minimum_password_length %> caracteres)</em>
        <% end %><br />
      </div>

      <div class="input-wrapper">
        <%= f.label :confirmação_da_senha %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Confirmação da senha", class: "input-box" %>
      </div>
      <%= f.submit "Cadastrar", class: "btn" %>
    <% end %>
  </div>  

</div>
